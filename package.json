{
  "name": "@japa/plugin-adonisjs",
  "version": "1.0.5",
  "description": "A bridge between AdonisJS and Japa",
  "main": "build/index.js",
  "files": [
    "build/src",
    "build/index.d.ts",
    "build/index.js"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js"
  },
  "type": "module",
  "scripts": {
    "pretest": "npm run lint",
    "test": "cross-env NODE_DEBUG=japa:plugin-adonisjs c8 npm run quick:test",
    "clean": "del-cli build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile",
    "release": "np",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "sync-labels": "github-label-sync --labels .github/labels.json japa/plugin-adonisjs",
    "quick:test": "node --loader=ts-node/esm bin/test.ts"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "keywords": [
    "plugin-adonisjs",
    "japa-plugin"
  ],
  "author": "virk,japa",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/core": "^6.1.5-5",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@japa/api-client": "^2.0.0-0",
    "@japa/assert": "^2.0.0-1",
    "@japa/browser-client": "^2.0.0-2",
    "@japa/runner": "^3.0.0-3",
    "@swc/core": "^1.3.67",
    "@types/node": "^20.3.3",
    "c8": "^8.0.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-adonis": "^3.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "get-port": "^7.0.0",
    "github-label-sync": "^2.3.1",
    "husky": "^8.0.3",
    "np": "^8.0.4",
    "playwright": "^1.35.1",
    "prettier": "^2.8.8",
    "ts-node": "^10.8.1",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.1.5-5",
    "@japa/api-client": "^2.0.0-0",
    "@japa/browser-client": "^2.0.0-1",
    "@japa/runner": "^3.0.0-3",
    "playwright": "^1.35.1"
  },
  "peerDependenciesMeta": {
    "@japa/api-client": {
      "optional": true
    },
    "@japa/browser-client": {
      "optional": true
    },
    "playwright": {
      "optional": true
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/japa/plugin-adonisjs.git"
  },
  "bugs": {
    "url": "https://github.com/japa/plugin-adonisjs/issues"
  },
  "homepage": "https://github.com/japa/plugin-adonisjs#readme"
}
