{
  "name": "@japa/plugin-adonisjs",
  "version": "2.0.0",
  "description": "A bridge between AdonisJS and Japa",
  "main": "build/index.js",
  "files": [
    "build",
    "!build/bin",
    "!build/tests",
    "!build/tests_helpers"
  ],
  "exports": {
    ".": "./build/index.js"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "type": "module",
  "scripts": {
    "pretest": "npm run lint",
    "test": "cross-env NODE_DEBUG=japa:plugin-adonisjs c8 npm run quick:test",
    "clean": "del-cli build",
    "typecheck": "tsc --noEmit",
    "precompile": "npm run lint && npm run clean",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "build": "npm run compile",
    "release": "np",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "sync-labels": "github-label-sync --labels .github/labels.json japa/plugin-adonisjs",
    "quick:test": "node --loader=ts-node/esm bin/test.ts"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "keywords": [
    "plugin-adonisjs",
    "japa-plugin"
  ],
  "author": "virk,japa",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/core": "^6.1.5-28",
    "@adonisjs/eslint-config": "^1.1.8",
    "@adonisjs/prettier-config": "^1.1.8",
    "@adonisjs/tsconfig": "^1.1.8",
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@japa/api-client": "^2.0.1",
    "@japa/assert": "^2.0.1",
    "@japa/browser-client": "^2.0.1",
    "@japa/runner": "^3.0.5",
    "@swc/core": "^1.3.96",
    "@types/node": "^20.8.10",
    "c8": "^8.0.1",
    "cross-env": "^7.0.3",
    "del-cli": "^5.1.0",
    "eslint": "^8.53.0",
    "get-port": "^7.0.0",
    "github-label-sync": "^2.3.1",
    "husky": "^8.0.3",
    "np": "^8.0.4",
    "playwright": "^1.39.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.8.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.1.5-28",
    "@japa/api-client": "^2.0.0",
    "@japa/browser-client": "^2.0.0",
    "@japa/runner": "^3.0.4",
    "playwright": "^1.39.0"
  },
  "peerDependenciesMeta": {
    "@japa/api-client": {
      "optional": true
    },
    "@japa/browser-client": {
      "optional": true
    },
    "playwright": {
      "optional": true
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/japa/plugin-adonisjs.git"
  },
  "bugs": {
    "url": "https://github.com/japa/plugin-adonisjs/issues"
  },
  "homepage": "https://github.com/japa/plugin-adonisjs#readme",
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "tsup": {
    "entry": [
      "./index.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": true,
    "target": "esnext"
  }
}
